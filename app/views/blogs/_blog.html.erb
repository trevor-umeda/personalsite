<div id ="blog">
  <div id="blog_date">
    <%= blog.created_at.strftime("%d %b. %Y") %>
  </div>
  <div id="blog_title">
    <%= blog.title %>
  </div>

  <div id="blog_post">
  <%= h(blog.post).gsub(/\n/, '<br/>').html_safe %>
  </div>
  <div id="tag_id">
    <% if blog.tag_id %>
        Tag:
    <%= link_to blog.tag.name, url_for(:tag => blog.tag.id),:remote => true %>
    <% else %>
    No Tag
    <% end %>

  </div>
  <% if current_user %>
  <%= link_to 'Edit', edit_blog_path(blog) %>
  <%= link_to 'Destroy', blog, confirm: 'Are you sure?', method: :delete %> </br>
 <% end %>
</div>