<%=  form_for @review do |f| %>
          <div class="field">
                  <%= f.label :description %><br />
                  <%= f.text_area :description, :rows => 9,:class => "tinymce" %>
                  <%= tinymce %>
                </div>
            <div class="field">
              <%= f.hidden_field :movie_id %>
            </div>
              <div class="actions">
                  <%= f.submit %>
                </div>
   <% end %>