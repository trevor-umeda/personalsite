<%= form_for @movie do |f| %>
    <div class = "field">
         <%= f.label :name %><br />
         <%= f.text_field :name%>
       </div>
    <div class="field">

        <%= f.label :description %><br />
        <%= f.text_area :description, :rows => 9,:class => "tinymce" %>
        <%= tinymce %>
      </div>
    <div class="actions">
        <%= f.submit %>
      </div>
<% end %>